<h1><%= @category.title %></h1>

<ul>
<% @category.items.each do |item| %>
    <li><%= link_to "#{item.title} - $#{item.price}", item_path(item) %>
        <% if !!current_user %>
          <%= form_tag(cart_path, method: :patch) do %>
            <%= hidden_field_tag 'item_id', item.id %>
            <%= submit_tag 'Add to Cart' %>
          <% end %>
        <% end %>
  </li>

<% end %>
</ul>
